<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.laboratorio.classwork3.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="306dp"
            android:layout_height="46dp"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteY="31dp"
            android:id="@+id/editText"
            tools:layout_editor_absoluteX="23dp" />

        <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            app:layout_constraintLeft_toLeftOf="@+id/editText"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/editText" />

        <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            app:layout_constraintTop_toTopOf="@+id/button1"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@+id/button1"
            android:layout_marginLeft="16dp" />

        <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            app:layout_constraintTop_toTopOf="@+id/button2"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@+id/button2"
            android:layout_marginLeft="16dp" />

        <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button1"
            app:layout_constraintLeft_toLeftOf="@+id/button1" />

        <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            app:layout_constraintTop_toTopOf="@+id/button5"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@+id/button5"
            android:layout_marginLeft="16dp" />

        <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            app:layout_constraintTop_toTopOf="@+id/button4"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@+id/button4"
            android:layout_marginLeft="16dp" />

        <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            app:layout_constraintLeft_toLeftOf="@+id/button4"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button4" />

        <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button8"
            app:layout_constraintTop_toTopOf="@+id/button7"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@+id/button7"
            android:layout_marginLeft="16dp" />

        <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            app:layout_constraintTop_toTopOf="@+id/button8"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@+id/button8"
            android:layout_marginLeft="16dp" />

        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttoninc"
            app:layout_constraintLeft_toLeftOf="@+id/button7"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button7" />

        <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttondec"
            app:layout_constraintTop_toTopOf="@+id/buttoneq"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@+id/buttoneq"
            android:layout_marginLeft="16dp" />

        <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonmul"
            app:layout_constraintTop_toTopOf="@+id/button0"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@+id/button0"
            android:layout_marginLeft="16dp" />

        <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttondiv"
            app:layout_constraintLeft_toLeftOf="@+id/buttoninc"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/buttoninc" />

        <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttoneq"
            app:layout_constraintTop_toTopOf="@+id/buttondiv"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@+id/buttondiv"
            android:layout_marginLeft="16dp" />

        <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button0"
            app:layout_constraintTop_toTopOf="@+id/buttoninc"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@+id/buttoninc"
            android:layout_marginLeft="16dp" />

        <Button
            android:id="@+id/buttondel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="delete"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/buttondiv"
            app:layout_constraintLeft_toLeftOf="@+id/buttondiv" />

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Backspace"
            app:layout_constraintLeft_toRightOf="@+id/buttondel"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toTopOf="@+id/buttondel" />


    </android.support.constraint.ConstraintLayout>
</RelativeLayout>
